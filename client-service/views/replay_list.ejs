<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content>
        <meta name="author" content="kevinbird61">
        <link rel="icon" href="icon.png">
        <title> <%= title %> </title>
        <!-- bootstrap css & js -->
        <!-- <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"> -->
        <% include ../elements/header_bootstraptype %>
    </head>
    <body>
        <div class="container">
            <div class="jumbotron">
                <p class="lead"> Streaming is available now! Go and check=><a href="/check_connection"> Streaming Page</a></p>
                <hr class="my-4">
            </div>
        </div>

        <div class="container">
            <div class="jumbotron">
                <table class="table">
                    <thead class="thead-inverse">
                        <tr>
                        <th>#</th>
                        <th><%= col1 %></th>
                        <th><%= col2 %></th>
                        <th><%= col3 %></th>
                        <th><%= col4 %></th>
                        <th>選擇播放</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var index in content){ %>
                            <% if(content[index].includes(filter) && filter != undefined){ %>
                                <% var detail = content[index].split('_'); %>
                                <tr>
                                <th scope="row"><%= index %></th>
                                <td><%= detail[0] %></td>
                                <td><%= detail[1] %></td>
                                <td><%= detail[2] %></td>
                                <td><%= detail[3] %></td>
                                <td><button id="<%= content[index] %>" type="button" class="btn btn-success" onclick="go_replay(this.id)">播放</button><td>
                                </tr>
                            <% }else if(content[index].includes('undefined') == false && filter == undefined){ %>
                                <% var detail = content[index].split('_'); %>
                                <tr>
                                <th scope="row"><%= index %></th>
                                <td><%= detail[0] %></td>
                                <td><%= detail[1] %></td>
                                <td><%= detail[2] %></td>
                                <td><%= detail[3] %></td>
                                <td><button id="<%= content[index] %>" type="button" class="btn btn-success" onclick="go_replay(this.id)">播放</button><td>
                                </tr>
                            <% } %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </body>
    <script type="text/javascript">
        // For manually redirect
        function go_replay(pathname){
            window.location = '/go_replay?replay=' + pathname;
        }
    </script>
</html>
